package com.ust.ioc2;

import org.springframework.beans.factory.BeanFactory;
import org.springframework.beans.factory.xml.XmlBeanFactory;
import org.springframework.core.io.FileSystemResource;

import com.ust.ioc.Connection;
import com.ust.ioc.Login;

public class TestDrawing {

	public static void main(String[] args) {
		BeanFactory factory =
				new XmlBeanFactory(new FileSystemResource("beans.xml"));
		
		
		Object obj = factory.getBean("p1");
		Line con=(Line)obj;//if we use .getbean then connection will go to a supertype so convert to type of connection so downcasting
		System.out.println(obj);
		Object  obj2=factory.getBean("p2");
		Line l =(Line)obj2;
		Line.drawLine();
	}
		
		
	}
	
}
